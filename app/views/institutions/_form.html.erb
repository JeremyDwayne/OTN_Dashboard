<%= form_for @institution do |f| %>
  <div class="form-group">
    <%= f.label :consortium_id %><br />
    <%= f.select :consortium_id, options_from_collection_for_select(@consortia, 'id', 'name'), autofocus: true, class: "form-control" %>
    <br /><%= link_to "New Consortium", new_consortium_path, class: "btn btn-primary" %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address_line_1 %><br />
    <%= f.text_field :address_line_1, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address_line_2 %><br />
    <%= f.text_field :address_line_2, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :zip %><br />
    <%= f.number_field :zip, autofocus: true, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
